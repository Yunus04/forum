
<style type="text/css">
.meta {
	margin-bottom: 10px;

}

.contetn {
	margin-bottom: 10px;
}

.count {
	float: right;
	margin-bottom: 10px;
}

.thread {
	margin-bottom: 20px;
	border-bottom: 1px solid #000000;
}

</style>

<div class="row">
  <div class="col-md-3 col-md-offset-3"></div>
  <div class="col-md-6 col-md-offset-3">



  	 <div class="thread">
  	 	 
    		<h4> <%= @thread.title.titleize %></h4>

    		<div class="meta">
          <%= @thread.created_at.strftime("%d %B %Y") %> oleh <%= @thread.user.name %>
    		</div>

    		<div class="contet">
    			<%= @thread.content %>
    		</div>
    	   		 <div style="clear: both; "></div>
    		
    	</div>


<% if @thread.forum_posts.any? %>
<% @thread.forum_posts.each do |p| %>

  	 <div class="thread">
  

    		<div class="meta">
          <%= p.created_at.strftime("%d %B %Y") %> oleh <%= p.user.name %>
    		</div>

    		<div class="contet">
    			<%= p.content %>
    		</div>
    	  		<div style="clear: both; "></div>
    		
    </div>
  
<% end %>

<% else %>
<div>
	Jadilah orang pertama yang melakukan tanggapan
</div>
<% end %>

<% if @post.errors.any? %>
          <div class='alert alert-danger alert-dismissibele'>
             <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
             
            <% @post.errors.full_messages.each do |error| %>
            <span><%= error %></span></br>
            <% end %>
          </div>
        <% end %>
<% if user_signed_in? %>
<%= form_for [@thread, @post] do |f| %>
<div class="form-group">
      <%= f.label :content %>
      <%= f.text_area :content, rows: 10, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.submit "Submite", class: 'btn btn-primary form-control' %>
    </div>
<% end %>
<% end %>
  </div>
</div>


